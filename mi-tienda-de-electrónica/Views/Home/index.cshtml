@{
    ViewData["Title"] = "Tienda Electrónica";
}

@if (true)
{
    <a asp-controller="Admin" asp-action="Index" class="btn-admin">Panel de Administración</a>
}


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/style.css" />
</head>
<body>
    <!-- Encabezado -->
    <header>
        <h1>Tienda Electrónica</h1>
        <nav>
            <ul>
                <li><a href="#" id="ver-productos">Productos</a></li>
                <li><a href="#" id="ver-carrito">Carrito (<span id="carrito-count">0</span>)</a></li>
              
            </ul>
        </nav>
    </header>

    <!-- Buscador -->
    <section id="buscador">
        <input type="text" id="search-input" placeholder="Buscar productos...">
        <button id="search-btn">Buscar</button>
    </section>

    <!-- Listado de productos -->
    <main>
        <section id="productos-container">
            <!-- Se cargarán los productos vía JavaScript -->
        </section>
    </main>

    <!-- Modal de detalles del producto -->
    <div id="modal-producto" class="modal">
        <div class="modal-content">
            <span class="cerrar">&times;</span>
            <h2 id="modal-nombre"></h2>
            <img id="modal-imagen" src="" alt="Imagen del producto">
            <p id="modal-descripcion"></p>
            <p><strong>Precio: </strong>$<span id="modal-precio"></span></p>
            <button id="btn-agregar-carrito">Agregar al carrito</button>
        </div>
    </div>

    <!-- Modal para el carrito de compras -->
    <div id="modal-carrito" class="modal">
        <div class="modal-content">
            <span class="cerrar" id="cerrar-carrito">&times;</span>
            <h2>Carrito de Compras</h2>
            <div id="carrito-items">
                <!-- Items del carrito -->
            </div>
            <p><strong>Total: </strong>$<span id="carrito-total">0</span></p>
            <button id="btn-finalizar">Finalizar Compra</button>
        </div>
    </div>

    <script src="~/script.js"></script>
</body>
</html>
